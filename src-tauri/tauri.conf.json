{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "archie",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "http": {
        "all": true,
        "request": true,
        "scope": ["https://api.github.com/*", "https://github.com/*"]
      },
      
      "dialog": {
        "all": true
      },
      "fs": {
        "createDir": true,
        "readDir": true,
        "readFile": true,
        "writeFile": true,
        "scope": ["/**", "$APPCONFIG", "$APPCONFIG/*"],
        "all": true
      },
      "path": {
        "all": true
      },
      "shell": {
        "all": true,
        "execute": true, 
        "sidecar": true, 
        "open": true,
        "scope": [
          {
            "name": "create-dir",
            "cmd": "mkdir",
            "args": [ "-p", { "validator": "\\S+" }]
          }
        ]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "it.mogui.archie",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "maximized": true,
        "title": "archie",
        "width": 800,
        "height": 600
      }
    ]
  }
}
